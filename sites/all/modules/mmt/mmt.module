      'type' => $node_type,
      'uid' => 0,
      'created' => strtotime("now"),
      'changed' => strtotime("now"),
      'status' => 1,
	    'comment' => 2,
 	    'promote' => 0,
      'moderate' => 0,
      'sticky' => 0,
      'language' => 'und'  
    ); 
    $newnode->title = $name;
    $newnode->uri = $uri;
