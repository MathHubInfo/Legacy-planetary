	  $nid = mmt_make_node($pair[1], $pair[0]); //$node->nid
    //path from url 
    $alias = $pair[1];  
    if (substr($alias, -1) == '/') {
      $alias = substr($alias, 0, -1);
    }
    $pathOpt = array(
		  'source' => 'node/' . $nid,
		  'alias' => $alias,
	  );
	  path_save($pathOpt);
    //link for tree menu

    $menuOpt = array (
		'link_path' => drupal_get_normal_path($alias),
        'link_title' => $uri[count($uri) - 1],
        'plid' => $plids_stack[count($plids_stack) - 1],
